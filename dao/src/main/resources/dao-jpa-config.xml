<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	<bean id="emf" class="javax.persistence.Persistence"
		factory-method="createEntityManagerFactory">
		<constructor-arg value="pizzeria-console-object-java8"></constructor-arg>
	</bean>
	<bean id="dao" class="fr.pizzeria.dao.pizza.PizzaDaoJpa">
		<constructor-arg ref="emf"></constructor-arg>
	</bean>
	
	
</beans>
